    private async Task AutoSelectOutputAsync(
        OutputActionMode updateTimestampMode,
        OutputActionMode storeInCacheMode)
    {
        if (selectedOutputType is null ||
            GetOutput(selectedOutputType) is not { } output ||
            HasEmptyText(output) == true)
        {
            selectedOutputType = !AllOutputs.Any()
                ? null
                : AllOutputs.MaxBy(static o => o.Priority)!.Type;
        }

        await UpdateOutputDisplayAsync(updateTimestampMode, storeInCacheMode);
    }

    enum OutputActionMode
    {
        Never,
        IfLazyTextIsResolved,
        Always,
    }

    private async Task UpdateOutputDisplayAsync(
        OutputActionMode updateTimestampMode,
        OutputActionMode storeInCacheMode)
    {
        if (compiled is not { } comp || selectedOutputType is null)
        {
            var state = await saveStateAsync(updateTimestamp: shouldPerformOutputAction(updateTimestampMode, resolvedLazyText: false));
            await setModelAsync(null, "", new() { Text = "" });
        }
        else
        {
            var compiledOutput = comp.Output;
            var outputType = selectedOutputType;
            var outputInfo = GetOutput(outputType);
            var (result, resolvedLazyText) = await LoadOutputTextAsync(outputInfo);
            var state = await saveStateAsync(updateTimestamp: shouldPerformOutputAction(updateTimestampMode, resolvedLazyText));
            await setModelAsync(outputInfo, outputType, result);

            if (compiledOutput is not null && shouldPerformOutputAction(storeInCacheMode, resolvedLazyText))
            {
                // If a lazy text has been populated, re-cache.
                TryStoreInCache(state, compiledOutput);
            }
        }

        static bool shouldPerformOutputAction(OutputActionMode mode, bool resolvedLazyText)
        {
            return mode switch
            {
                OutputActionMode.Always => true,
                OutputActionMode.IfLazyTextIsResolved => resolvedLazyText,
                _ => false,
            };
        }

        Task<SavedState> saveStateAsync(bool updateTimestamp)
        {
            return SaveStateToUrlAsync((state) => state with
            {
                // After changing the selected input, we call this method anyway to update outputs,
                // so we can save both selected input and output here.
                SelectedInputIndex = activeInputTabId is { } tabId ? InputTabIdToIndex(tabId) : 0,
                SelectedOutputType = selectedOutputType,

                // If state is going to be cached, update the timestamp so the cache key is unique
                // (it is not possible to overwrite cache entries
                // to prevent anyone changing already shared snippet outputs).
                Timestamp = updateTimestamp ? DateTime.UtcNow : state.Timestamp,
            });
        }

        async Task setModelAsync(OutputInfo? outputInfo, string outputType, CompiledFileLazyResult result)
        {
            var language = (result.Metadata is { MessageKind: not MessageKind.Normal } ? null : outputInfo?.Output.Language) ?? "plaintext";

            var text = CompilerOutputPlugin.GetText(outputInfo, result, out outputDisclaimer, ref language);

            if (!outputStates.TryGetValue(outputType, out var state))
            {
                state = new(await BlazorMonaco.Editor.Global.CreateModel(
                    JSRuntime,
                    value: text,
                    language: language,
                    uri: CompiledAssembly.GetOutputModelUri(outputInfo?.File, outputType)));
                outputStates[outputType] = state;
            }
            else
            {
                await state.Model.SetValue(text);
                await BlazorMonaco.Editor.Global.SetModelLanguage(JSRuntime, state.Model, language);
            }

            bool saveViewState = currentOutput != state;

            if (saveViewState && currentOutput is { } previousOutput)
            {
                previousOutput.ViewState = await outputEditor.SaveViewStateAsync(module);
            }

            currentOutput = state;
            LanguageServices.CurrentMetadata = (state.Model.Uri, result.Metadata);

            bool isOutputLanguage = language == CompiledAssembly.OutputLanguageId;

            await outputEditor.SetModel(state.Model);
            await outputEditor.UpdateOptions(new()
            {
                StickyScroll = new()
                {
                    Enabled = isOutputLanguage,
                    MaxLineCount = 100,
                },
            });

            if (saveViewState && !state.ViewState.IsEmpty)
            {
                await outputEditor.RestoreViewStateAsync(state.ViewState, module);
            }
            else if (isOutputLanguage)
            {
                // Fold all recursively except the first level.
                await BlazorMonacoInterop.ExecuteActionAsync(outputEditor.Id, "editor.foldAll");
                await BlazorMonacoInterop.ExecuteActionAsync(outputEditor.Id, "editor.unfold");

                // Underline links.
                if (result.Metadata != null &&
                    LanguageServices.TryGetOutputToOutputMapping(result.Metadata, out var mapping))
                {
                    var offsets = new int[mapping.Values.Count * 2];
                    var i = 0;
                    foreach (var (span, _) in mapping.Values)
                    {
                        offsets[i++] = span.Start;
                        offsets[i++] = span.End;
                    }

                    await BlazorMonacoInterop.UnderlineLinksAsync(outputEditor.Id, offsets);
                }
            }

            cursorSynchronizer?.Enable(result.Metadata);
        }
    }

    private OutputInfo? GetOutput(string type)
    {
        if (CurrentCompiledFile is { } currentCompiledFile)
        {
            if (currentCompiledFile.GetOutput(type) is { } output)
            {
                return new()
                {
                    Output = output,
                    CachedOutput = CurrentCachedFile?.GetOutput(type),
                    File = CurrentFileName
                };
            }
        }

        if (compiled?.Output.GetGlobalOutput(type) is { } globalOutput)
        {
            return new()
            {
                Output = globalOutput,
                CachedOutput = compiled?.CachedOutput?.GetGlobalOutput(type),
            };
        }

        return null;
    }

    private bool? HasEmptyText(OutputInfo? outputInfo)
    {
        if (TryLoadEagerOutputText(outputInfo, out _, out _, out var text))
        {
            return string.IsNullOrEmpty(text);
        }

        return null;
    }

    private bool TryLoadEagerOutputText(OutputInfo? outputInfo,
        [NotNullWhen(returnValue: false)] out CompiledFileOutput? output,
        out string? file,
        [NotNullWhen(returnValue: true)] out string? text)
    {
        if (outputInfo is not { } info)
        {
            output = null;
            file = null;
            text = "";
            return true;
        }

        output = info.Output;
        file = info.File;

        if (output.Text is { } eagerText)
        {
            text = eagerText;
            return true;
        }

        text = null;
        return false;
    }

    private async Task<(CompiledFileLazyResult Result, bool ResolvedLazyText)> LoadOutputTextAsync(OutputInfo? outputInfo)
    {
        if (TryLoadEagerOutputText(outputInfo, out var output, out var file, out var eagerText))
        {
            return (new() { Text = eagerText, Metadata = output?.Metadata }, false);
        }

        // If we are currently displaying cached outputs, but this specific output type is not cached,
        // avoid resolving it and hence starting compilation implicitly.
        if (compiled is { CacheInfo: not null, CachedOutput: null })
        {
            return (new() { Text = "(not cached, press Compile to load this)", Metadata = CompiledFileOutputMetadata.SpecialMessage }, false);
        }

        if (!outputLoading)
        {
            return await loadAsync(compiled!.Input, file: file, outputType: output.Type);
        }

        return (new() { Text = "" }, false);

        async Task<(CompiledFileLazyResult Result, bool ResolvedLazyText)> loadAsync(CompilationInput input, string? file, string outputType)
        {
            outputLoading = true;
            await RefreshAsync();

            CompiledFileLazyResult result;
            bool success;
            try
            {
                // The text will be cached and loaded synchronously next time (from `output.Text`).
                result = await output.LoadAsync(new()
                {
                    OutputFactory = async () =>
                    {
                        return await Worker.GetOutputAsync(input, file: file, outputType: outputType);
                    },
                });
                success = true;
            }
            catch (Exception ex)
            {
                string error = ex is WorkerException w ? w.Failure.FullString : ex.ToString();
                result = new() { Text = error, Metadata = CompiledFileOutputMetadata.SpecialMessage };
                success = false;
            }

            outputLoading = false;
            StateHasChanged();
            return (result, success);
        }
    }

